@model PROG3.Models.ClaimEntity

@{
    ViewData["Title"] = "Claim Details / Invoice";
}

<!-- Header and Navigation Bar -->
<header>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/Lecturer/SubmitClaim">Lecturer: Submit Claim</a></li>
            <li><a href="/CoordinatorManager/ReviewClaims">Coordinator/Manager: Review Claims</a></li>
            <li><a href="/HR/GenerateReports">HR: Generate Reports</a></li>
        </ul>
    </nav>
</header>

<!-- Claim Details / Invoice Section -->
<div class="services">
    <h2>Claim Details / Invoice</h2>

    <div class="invoice-details">
        <h4>Invoice Details for Claim ID: @Model.ClaimId</h4>
        <p><strong>Lecturer ID:</strong> @Model.LecturerId</p>
        <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
        <p><strong>Submission Date:</strong> @Model.SubmissionDate.ToString("dd/MM/yyyy")</p>
        <p><strong>Status:</strong> @Model.Status</p>

        <!-- Button to print invoice -->
        <button class="btn btn-primary" onclick="window.print()">Print Invoice</button>
    </div>
</div>

<!-- Footer -->
<footer>
    <p>&copy; 2024 Contract Monthly Claim System. All Rights Reserved.</p>
</footer>

<!-- Custom Styles -->
<style>
    /* Global Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    body {
        background: linear-gradient(135deg, #f4f4f9, #e0e0e0);
        color: #333;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    /* Navigation Bar */
    header {
        background-color: #333;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    nav ul {
        display: flex;
        justify-content: center;
        list-style: none;
    }

    nav li {
        margin: 0 15px;
    }

    nav a {
        color: #fff;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 16px;
    }

    /* Claim Details Section */
    .services {
        background-color: #fff;
        padding: 50px 20px;
        text-align: center;
        margin-top: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .invoice-details {
        text-align: left;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .invoice-details h4 {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .invoice-details p {
            font-size: 1.125rem;
            margin-bottom: 10px;
        }

    .btn {
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Footer */
    footer {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 20px;
        position: relative;
        bottom: 0;
        width: 100%;
    }
</style>
