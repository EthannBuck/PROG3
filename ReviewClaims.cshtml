@model List<PROG3.Models.ClaimEntity>

@{
    ViewData["Title"] = "Review Claims";
}

<!-- Header and Navigation Bar -->
<header>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/Lecturer/SubmitClaim">Lecturer: Submit Claim</a></li>
            <li><a href="/CoordinatorManager/ReviewClaims">Coordinator/Manager: Review Claims</a></li>
            <li><a href="/HR/GenerateReports">HR: Generate Reports</a></li>
        </ul>
    </nav>
</header>

<!-- Review Claims Section -->
<div class="services">
    <h2>Review Claims</h2>

    <p>Below are the claims awaiting approval. Please review the details and take action.</p>

    <table class="claim-table">
        <thead>
            <tr>
                <th>Lecturer</th>
                <th>Total Amount</th>
                <th>Submission Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.LecturerId</td>
                    <td>@claim.TotalAmount.ToString("R")</td>
                    <td>@claim.SubmissionDate.ToString("dd/MM/yyyy")</td>
                    <td>@claim.Status</td>
                    <td>
                        <!-- Link to review the claim details -->
                        <a class="btn btn-primary" href="@Url.Action("ReviewClaim", "CoordinatorManager", new { claimId = claim.RowKey, lecturerId = claim.PartitionKey })">Review</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Footer -->
<footer>
    <p>&copy; 2024 Contract Monthly Claim System. All Rights Reserved.</p>
</footer>

<!-- Custom Styles -->
<style>
    /* Global Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    body {
        background: linear-gradient(135deg, #f4f4f9, #e0e0e0);
        color: #333;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    /* Navigation Bar */
    header {
        background-color: #333;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    nav ul {
        display: flex;
        justify-content: center;
        list-style: none;
    }

    nav li {
        margin: 0 15px;
    }

    nav a {
        color: #fff;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 16px;
    }

    /* Review Claims Section */
    .services {
        background-color: #fff;
        padding: 50px 20px;
        text-align: center;
        margin-top: 20px;
    }

        .services h2 {
            font-size: 2.5rem;
            margin-bottom: 40px;
        }

    /* Table Styling */
    .claim-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        text-align: left;
    }

        .claim-table th,
        .claim-table td {
            padding: 15px;
            border: 1px solid #ddd;
        }

        .claim-table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .claim-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    /* Button Styling */
    .btn {
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Footer */
    footer {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 20px;
        position: relative;
        bottom: 0;
        width: 100%;
    }
</style>
